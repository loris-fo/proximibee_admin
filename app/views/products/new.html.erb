<div align="center">
<%=form_for Product.new, html: {multipart: true}  do |f|%>
  <%=f.label :owner%>
  <%=f.text_field :owner%>
  <%=f.label :name%>
  <%=f.text_field :name%>
  <%=f.label :price%>
  <%=f.text_field :price%>
  <%=f.file_field :image%>
  <%=f.submit "Add Product" %>
<%end%>
</div>
<main>
  <%if Product.all.any?%>
  <div align="center">
  <br><br><br><br>
    <table class="fixed_headers">
      <tr>
        <th>Owner</th>
        <th>Product</th>
        <th>Price</th>
        <th>Image</th>
        <th>Delete</th>
      </tr>
      <%Product.all.each do |product|%>
      <tr>
        <td><%=product.owner%></td>
        <td><%=product.name%></td>
        <td><%=product.price%></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= link_to "Delete", product_path(product), method: :delete %></td>
      </tr>
      <%end%>
    </table>
    </div>
  <%end%>
</main>