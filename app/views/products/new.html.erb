<%=form_for Product.new do |f|%>
  <%=f.label :name%>
  <%=f.text_field :name%>
  <%=f.label :price%>
  <%=f.text_field :price%>
   <%=f.label :url%>
  <%=f.text_field :url%>
  <%=f.submit "Add Product"%>
<%end%>

<%if Product.all.any?%>
  <table class="fixed_headers">
    <tr>
      <th>Product</th>
      <th>Price</th>
    </tr>
    <%Product.all.each do |product|%>
    <tr>
      <td><%=product.name%></td>
      <td><%=product.price%></td>
    </tr>
    <%end%>
  </table>
<%end%>